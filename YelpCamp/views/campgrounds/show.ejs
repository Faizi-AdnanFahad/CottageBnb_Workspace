<link rel="stylesheet" href="/stylesheets/star.css">

<div class="row mb-3">
    <div class="col-6">
        <div class="card">

            <!-- Carousel to display images -->
            <div id="campgroundCarousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#campgroundCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#campgroundCarousel" data-slide-to="1"></li>
                    <li data-target="#campgroundCarousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <!-- Load all images from the uploaded images - The src of the images are stored in cloudinary -->
                    <% for (let i=0; i < campground.images.length; i++) { %>
                        <% if (i===0) { %>
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="<%= campground.images[i].url %>" alt="First slide">
                            </div>
                            <% } else { %>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="<%= campground.images[i].url %>" alt="First slide">
                                </div>
                                <% } %>
                    <% } %>
                </div>
                <% if (campground.images.length> 1) { %>
                    <a class="carousel-control-prev" href="#campgroundCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    </a>
                    <a class="carousel-control-next" href="#campgroundCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    </a>
                    <% } %>
            </div>


            <div class="card-body">
                <h5 class="card-title">
                    <%= campground.title %>
                </h5>
                <p class="card-text">
                    <%= campground.description %>
                </p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted">
                    <% if (campground.user) { %>
                        Submitted By: @<b>
                            <%= campground.user.username %>
                        </b>
                        <% } else { %>
                            Submitted By: @<b>
                                Anonymos
                            </b>
                            <% } %>
                </li>
                <li class="list-group-item text-muted">
                    <%= campground.location %>
                </li>
                <li class="list-group-item"><b>$</b>
                    <%= campground.price %>/night
                </li>
            </ul>
            <!-- Show the edit and delete button only if there exists a user && a campground belongs to the logged user -->
            <% if (currentUser && campground.user.equals(currentUser._id)) { %>
                <div class="card-body">
                    <a class="btn btn-info" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                    <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
                <% } %>
        </div>
    </div>
    <div class="col-6">
        <% if (currentUser) { %>
            <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" class="needs-validation" novalidate>
                <div class="border mt-4 p-3">
                    <h2>Leave a Review</h2>
                    <!-- Star selection functionality - Third Party code -->
                    <fieldset class="starability-basic">
                        <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked
                            aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="rating" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="rating" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="rating" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="rating" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="rating" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                    <div class="mb-3">
                        <textarea class="form-control" name="revBody" id="revBody" cols="10" rows="3"
                            required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <button class="btn btn-success">Submit</button>
                </div>
            </form>
            <% } %>
            <!-- Mapbox map -->
            <div id='map'></div>
            <div class="mt-3">
                <h2>Reviews</h2>
                <% for (let review of campground.reviews) { %>
                    <div class="mb-3 card">
                        <div class="card-body">
                            <% if (review.user.username) { %>
                                <h5>
                                    <%= review.user.username %>
                                </h5>
                                <% } else { %>
                                    <h5>Anonymos</h5>
                                    <% } %>
                                        <h5 class="card-title">
                                            <!-- Star review functionality - Third Party class -->
                                            <p class="starability-result" data-rating="<%= review.rating %>">
                                                Rated: <%= review.rating %> stars
                                            </p>
                                        </h5>
                                        <p class="card-text">
                                        <p>Review: <%= review.body %>
                                        </p>
                                        </p>
                                        <% if (currentUser && review.user.equals(currentUser._id)) { %>
                                            <form
                                                action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                method="POST">
                                                <button class="btn btn-sm btn-danger">Delete</button>
                                            </form>
                                            <% } %>
                        </div>
                    </div>
                    <% } %>
            </div>
    </div>
</div>

<!-- The token is needed in the .js file -->
<script>
    MAPBOX_TOKEN = '<%-process.env.MAPBOX_TOKEN%>'
    /* Make a campground a JSON file for Javascript to be able to read it. */
    let campground = <%-JSON.stringify(campground)%>
</script>
<script src="/javascripts/mapboxMap.js"></script>