<body class="d-flex text-center text-white bg-dark">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="mb-auto">
            <div>
                <h3 class="float-md-left mb-0">CottageBNB</h3>
                <!-- Custom Navbar -->
                <nav class="nav nav-masthead justify-content-center float-md-right">
                    <a class="nav-link active" aria-current="page" href="#">Home</a>
                    <a class="nav-link" href="/cottages">Cottages</a>
                    <% if(!currentUser) { %>
                        <a class="nav-link" href="/login">Login</a>
                        <a class="nav-link" href="/register">Register</a>
                    <% } else { %>
                        <a class="nav-link" href="/logout">Logout</a>
                    <% } %>
                </nav>
            </div>
        </header>
        <main class="px-3">
            <h1>CottageBNB</h1>
            <p class="lead"> Welcome to CottageBNB! <br> Jump right in and explore our many cottages. <br>
                Feel free to share some of your own and comment on others!</p>
            <a href="/cottages" id="btnViewChanges" class="btn btn-lg btn-secondary font-weight-bold border-white bg-white">View
                Cottages</a>
        </main>

        <footer class="mt-auto text-white-50">
            <p>&copy; 2022 </p>
        </footer>
    </div>

    </div>
